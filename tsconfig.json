{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
  
      "skipLibCheck": true,

      "allowJs": false,
      "checkJs": false,
  
      "resolveJsonModule": true,
  
      "rootDir": "src",
      "outDir": "dist",
  
      "baseUrl": "./",
      "paths": {
        "@routes/*": ["src/routes/*"],
        "@services/*": ["src/services/*"],
        "@lib/*": ["src/lib/*"],
        "@config/*": ["src/config/*"]
      }
    },
    "include": ["src", "mock-server/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
  }
  
